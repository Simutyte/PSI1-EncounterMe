<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Log in"
             x:Class="EncounterMe.Views.LogInPage"
             Shell.FlyoutBehavior="Disabled">
    
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            
            <Label Text="Username"/>
            <Entry Placeholder="Username"/>
            
            <Label Text="Password"/>
            <Entry IsPassword="True" Placeholder="Username"/>
            
            <Button Text="Log in!" Clicked="LogInButtonClicked" />
            
            <Label Text="Register" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Tapped_Registration"/>
                </Label.GestureRecognizers>
            </Label>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>
